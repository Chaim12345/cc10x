{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "allowJs": false
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist", "**/__tests__/*", "src/skills-backup/**/*"]
}